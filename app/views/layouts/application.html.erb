<head>
	<meta charset="utf-8" />
	
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
	<title><%= content_for?(:title) ? yield(:title) : "Jamal Soueidan" %></title>
  
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag    "application" %>
	
	<!-- Included JS Files  -->
	<%= javascript_include_tag "application" %>
  
	<!--Fonts from Google"s Web font directory at http://google.com/webfonts -->
	<link href="http://fonts.googleapis.com/css?family=PT+Serif:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css">
	<link href="http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css">
	
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="top-bar">
		<ul>
			<li class="name"><h1><a href="/">Jamal Soueidan</a></h1></li>
	    	<li class="toggle-topbar"><a href="#"></a></li>
		</ul>

		<ul class="right">
            <li class="divider"></li>
            <li><%= link_to "Blog", posts_path %></li>
            <li class="divider"></li>
			<li><%= link_to "Archives", archives_path %></li>
        	<li class="divider"></li>
           	<li><%= link_to "Projects", projects_path %></li>
			<li class="divider"></li>
			<li><%= link_to "About", about_me_path%></li>
		</ul>
	</nav>


	<div class="top">
		<h1><%=@title%></h1>
		<p><%=@body%></p>
    </div>
			
	<div id="content">
		<%= yield %>
	</div>

</body>
</html>